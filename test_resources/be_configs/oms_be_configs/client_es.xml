<quod>
    <includes>
        <include>${CFG_DIR}/${CFG_PREFIX}es.xml</include>
    </includes>
    <es>
        <subjects>
            <request>fixbuyTH2testgtwRequests</request><!--Use QuickfixBuy-->
            <reply>fixbuyTH2testgtwReplies</reply>
            <info>fixbuyTH2testgtwInfo</info>
        </subjects>
        <cancel>
            <postpone>
                <!-- In FIX, we don't rely on the venue order id but on
                the client order id instead, so a forced cancel request
                can be submitted even before order acknowledgement... -->
                <forced>true</forced>
                <!-- ... and potentially also for a normal cancel request,
                at the risk of being rejected if the new order is rejected
                (probably not a big deal) -->
                <open>true</open>

                <!-- In FIX, we should postpone a cancel request when an order
                has a modify request pending since the client order id may change
                depending on the modify's outcome. -->
                <modified>true</modified>
            </postpone>
        </cancel>
